<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:elevation="8dp"
    android:orientation="vertical"
    android:padding="24dp">

    <Button
        android:id="@+id/btnAnnullaClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnCancel_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_weight="1"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/black"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvDevices"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAnnullaClient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtErrorMessageClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawablePadding="16dp"
        android:padding="24dp"
        android:text="@string/txtConnectionError"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:textStyle="bold"
        app:drawableTopCompat="@drawable/ic_error"
        app:layout_constraintBottom_toTopOf="@+id/btnAnnullaClient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    
</androidx.constraintlayout.widget.ConstraintLayout>